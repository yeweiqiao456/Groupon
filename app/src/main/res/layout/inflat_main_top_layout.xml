<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#FF6633"
    android:gravity="center_vertical">
    <LinearLayout
        android:id="@+id/ll_main_top_left"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:gravity="center">
        <TextView
            android:id="@+id/textView_main_top_cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"/>
        <ImageView
            android:paddingStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_home_arrow_down_normal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:background="@drawable/main_top_shape"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/navibar_icon_search"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索城市信息..."/>
    </LinearLayout>
        <ImageView
            android:id="@+id/imageView_main_top_right"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/home_navibar_icon_add"/>
</LinearLayout>