<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="65dp">
    <ImageView
        android:id="@+id/imageView_main_item"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:src="@drawable/bucket_no_picture"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView_main_item_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="旺顺阁鱼头泡饼"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/textView_main_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0.6km"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView_main_item_massage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="[看丹桥]抵至0.0折5折券一张"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView_main_item_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="￥1"
                android:textSize="16sp"
                android:textColor="#FF6633"/>
            <TextView
                android:id="@+id/textView_main_item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="已出售578份"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>