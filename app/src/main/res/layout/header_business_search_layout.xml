<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <RelativeLayout
        android:id="@+id/relativeLayout_business_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/textView_business_top1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近"
            android:layout_centerVertical="true"
            android:paddingStart="24dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="2dp"
            android:src="@drawable/ic_arrow_down_black"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView_business_top1"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#D7D7D7"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout><RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/textView_business_top2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美食"
            android:layout_centerVertical="true"
            android:paddingStart="24dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="2dp"
            android:src="@drawable/ic_arrow_down_black"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView_business_top2"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#D7D7D7"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout><RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/textView_business_top3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智能排序"
            android:layout_centerVertical="true"
            android:paddingStart="12dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="2dp"
            android:src="@drawable/ic_arrow_down_black"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView_business_top3"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#D7D7D7"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout><RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/textView_business_top4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="筛选"
            android:layout_centerVertical="true"
            android:paddingStart="24dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="2dp"
            android:src="@drawable/ic_arrow_down_black"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView_business_top4"/>

    </RelativeLayout>

</LinearLayout>